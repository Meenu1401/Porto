<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvget"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Sign Up"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tvget"
        android:text="Enter your information to signup and become a member"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editname"
        android:hint="Name"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <EditText
        android:id="@+id/edit1"
        android:hint="Email ID/ Mobile Number"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/editname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/edit2"
        android:hint="Password"

        app:layout_constraintTop_toBottomOf="@+id/edit1"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        />

    <CheckBox
        android:gravity="center_vertical"
        android:id="@+id/checkbox1"
         android:layout_width="30dp"

        app:layout_constraintTop_toBottomOf="@+id/edit2"
        android:layout_height="20dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tvTnc"
        android:text="Terms and Conditions"
        app:layout_constraintTop_toBottomOf="@+id/edit2"

        app:layout_constraintLeft_toRightOf="@+id/checkbox1"
        android:layout_height="wrap_content"/>



    <TextView
        android:layout_width="match_parent"
        android:text="SIGN UP"
        android:gravity="center"
        android:background="@color/zee_primary"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="60dp"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/checkbox1"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>