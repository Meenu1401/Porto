<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/scrollParent"

    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="56dp"
        android:id="@+id/parent"
        android:background="@color/light_gray"
        android:layout_height="match_parent"
        >
        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:id="@+id/serachView"
            android:background="@color/gray"
            app:layout_constraintTop_toTopOf="@+id/parent"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@+id/serachView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:id="@+id/cardview"
            android:layout_marginTop="20dp"
            tools:ignore="MissingConstraints">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/foliodetail"
                android:visibility="visible"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@+id/serachView"
                android:layout_width="match_parent"
                android:background="@drawable/back_grad"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Current"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/currentvalue"
                    app:layout_constraintTop_toTopOf="@+id/foliodetail"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:textColor="@color/white"

                    android:id="@+id/currentvalueAmount"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/currentvalue"
                    android:layout_height="wrap_content"
                    android:text="1,600,000"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Invested"
                    android:id="@+id/investedvalue"
                    app:layout_constraintTop_toBottomOf="@+id/currentvalueAmount"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:textColor="@color/white"

                    android:id="@+id/investedvalueAmount"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/investedvalue"
                    android:layout_height="wrap_content"
                    android:text="1,200,000"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <View
                    android:layout_width="1dp"
                    android:background="@color/white"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/view"
                    app:layout_constraintLeft_toRightOf="@+id/currentvalueAmount"
                    app:layout_constraintBottom_toBottomOf="@+id/investedvalueAmount"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/totalreturn"
                    android:layout_width="wrap_content"
                    android:text="Total Return"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/view"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/valuetotalreturn"
                    app:layout_constraintTop_toBottomOf="@+id/totalreturn"
                    app:layout_constraintLeft_toRightOf="@+id/view"
                    android:text="+400,000(33.33%)"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>




                <TextView
                    android:textStyle="bold"
                    android:id="@+id/daysreturn"
                    android:layout_width="wrap_content"
                    android:text="1 Day Return"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/valuetotalreturn"
                    app:layout_constraintLeft_toRightOf="@+id/view"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/daysreturn"
                    app:layout_constraintLeft_toRightOf="@+id/view"
                    android:text="-300(2.33%)"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/lblSummary"
            android:text="Summary >"

            android:textSize="16dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/cardview"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />



        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewSummaryList"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:background="@color/white"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/lblSummary"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="wrap_content"
                    android:text="Name"
                    android:id="@+id/lblname"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/daysGain"
                    android:layout_width="wrap_content"
                    android:text="Days Gain"
                    android:textStyle="bold"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Latest Value"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textStyle="bold"


                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints" />



                <View
                    android:id="@+id/separator_summary"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@+id/lblname"
                    android:layout_height="2dp"
                    />



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerTop"
                    tools:itemCount="2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/separator_summary"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/summaryrow_item_2"
                    tools:ignore="MissingConstraints" />



            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.cardview.widget.CardView>



        <TextView
            app:layout_constraintTop_toBottomOf="@+id/cardviewSummaryList"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/lblAddtoPort"
            android:text="Add to portfolio"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:background="@color/zee_secondary"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/cardviewSummaryList"
            android:layout_width="wrap_content"
            android:id="@+id/lblEditPOrt"
            android:layout_marginTop="30dp"
            android:text="Edit Portfolio"
            android:background="@color/zee_secondary"
            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />



        <View
            android:id="@+id/seprator1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/lblEditPOrt"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/lblStocks"
            android:text="Stocks >"
            android:layout_marginTop="25dp"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/seprator1"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Name"
            android:id="@+id/lblStockname"
            app:layout_constraintTop_toBottomOf="@+id/lblStocks"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Days Gain"
            app:layout_constraintTop_toBottomOf="@+id/lblStocks"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Latest Value"
            app:layout_constraintTop_toBottomOf="@+id/lblStocks"
            app:layout_constraintRight_toRightOf="parent"


            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerStock"
            android:layout_width="match_parent"
            tools:itemCount="4"

            app:layout_constraintTop_toBottomOf="@+id/lblStockname"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            tools:ignore="MissingConstraints" />





        <View
            android:id="@+id/seprator"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerStock"
            tools:ignore="MissingConstraints" />



        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/lblMf"
            android:text="Mutual Funds >"
            android:layout_marginTop="25dp"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/seprator"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Name"
            android:id="@+id/lblMFname"
            app:layout_constraintTop_toBottomOf="@+id/lblMf"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Days Gain"
            app:layout_constraintTop_toBottomOf="@+id/lblMf"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Latest Value"
            app:layout_constraintTop_toBottomOf="@+id/lblMf"
            app:layout_constraintRight_toRightOf="parent"


            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMf"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/lblMFname"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            tools:itemCount="4"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>