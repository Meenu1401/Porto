<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvget"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Letâ€™s Get Started"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tvget"
        android:text="Enter your information below or signup to access FeatureName"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/edit1"
        android:hint="Email ID/ Mobile Number"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/edit2"
        android:hint="Password"

        app:layout_constraintTop_toBottomOf="@+id/edit1"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        />

    <TextView
        android:gravity="right"
        android:id="@+id/forgot_pass"
        android:layout_width="match_parent"
        android:text="Forgot Password?"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/edit2"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:text="LOGIN"
        android:gravity="center"
        android:background="@color/zee_color_500"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/forgot_pass"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:text="SignUp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn"
        android:layout_marginTop="80dp"

        android:layout_height="wrap_content"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>